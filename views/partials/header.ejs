	</div>
			
			
	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		<ul class="nav navbar-nav navbar-right" style="color:white;">
			<%if(!currentUser){%>
			<li><a href="/login"><i class="fas fa-sign-in-alt"> Log-In</i></a></li>
			<li><a href="/register"><i class="fa fa-user-plus" aria-hidden="true"> Sign-Up</i></a></li>
			<%}else{%>
			<li><a href="#"><i class="fa fa-user-circle" aria-hidden="true"> USER:logged-in:<%=currentUser.username%></i></a></li>
			<li><a href="/logout"><i class="fas fa-sign-out-alt" aria-hidden="true"> Log-Out</i></a></li>	
			<%}%>
		</ul>
	</div>
</nav>
	<div class="container">
		<%if(error && error.length>0){%>
		<div class="alert alert-danger" role="alert"><%=error%></div>
		<%}%>
		<%if(success && success.length>0){%>
		<div class="alert alert-success" role="alert"><%=success%></div>
		<%}%>
		<%if(warning && warning.length>0){%>
		<div class="alert alert-warning" role="alert"><%=warning%></div>
		<%}%>
	</div>
	